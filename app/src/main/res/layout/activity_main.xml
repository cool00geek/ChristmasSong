<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Using Song Directory: "
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:id="@+id/mainSongDirText" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/choseSongButton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/chooDirText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.034" app:layout_constraintVertical_bias="0.464"/>
    <TextView
            android:text="Using train sound directory:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chooDirText"
            android:layout_marginBottom="244dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.04"/>
    <Button
            android:text="Choose Song Dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choseSongButton" android:onClick="choseSongDir"
            app:layout_constraintEnd_toStartOf="@+id/choseTrainDir" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="148dp"
            app:layout_constraintHorizontal_bias="0.444"/>
    <Button
            android:text="Choose Train Sound Dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choseTrainDir" android:onClick="choseTrainDir" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="148dp" android:layout_marginEnd="16dp"/>
    <Button
            android:text="Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playButton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintVertical_bias="0.848" android:onClick="playSongs"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/skipButton" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.848" android:onClick="stopMusic"/>
    <Button
            android:text="Skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/skipButton" app:layout_constraintEnd_toStartOf="@+id/stopButton"
            android:layout_marginEnd="28dp" android:onClick="skipSong" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.848"/>

</android.support.constraint.ConstraintLayout>